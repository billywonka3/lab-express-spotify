<div class="dataContainer">
    {{#each artists}}
        <div class="eachArtist">
            <img src={{this.images.0.url}} alt="Image not found" onerror="this.src='/images/no-img.jpg';">
            <div class="graybox">
                <h4>{{this.name}}</h4>
                <a class="viewButton" href="/albums/{{this.id}}">View Albums</a>
            </div>
        </div>
    {{/each}}
</div>